#!/usr/bin/env bash

exists() {
    source "$HOME/.local/share/sh/functions/exists"
}

"$@"

stat="$?"

if [[ "$stat" -eq 0 ]]
then
    msg="succeeded"
else
    msg="failed"
fi

if exists osascript
then
    osascript -e "display notification \"$msg\" with title \"$1\" sound name \"beep\""
elif exists zenity
then
    zenity --info --title="$1" --text="$msg"
elif exists notify-send
then
    notify-send "$1" "$msg"
elif exists say
then
    say "notify: $1 $msg"
else
    echo -e "notify: $1 $msg\a"
fi
